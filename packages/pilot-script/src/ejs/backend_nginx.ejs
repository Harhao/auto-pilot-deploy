map \$http_upgrade \$connection_upgrade {
    default upgrade;
    '' close;
}
server {
    listen 80;
    server_name api.oss-storage.top;
    return 301 https://\$server_name\$request_uri;
}

server {
    listen 443 ssl;
    server_name api.oss-storage.top; # localhost修改为您证书绑定的域名。
    ssl_certificate cert/fullchain.pem; #将xxxx.pem替换成您证书的文件名。
    ssl_certificate_key cert/private.key; #将xxxx.key替换成您证书的密钥文件名。
    ssl_session_timeout 5m;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE:ECDH:AES:HIGH:!NULL:!aNULL:!MD5:!ADH:!RC4; #使用此加密套件。
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2; #使用该协议进行配置。
    ssl_prefer_server_ciphers on;
    location <%= apiPrefix %> {
        proxy_pass <%= apiHost %>:<%= apiPort %>; #选填你的端口号
        proxy_set_header X-Real-IP \$remote_addr;
        proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
        proxy_set_header Host \$host;
        proxy_set_header Upgrade-Insecure-Requests 1;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header Upgrade \$http_upgrade;
        proxy_set_header Connection upgrade;
        proxy_set_header Accept-Encoding gzip;
    }
}