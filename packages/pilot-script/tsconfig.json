{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "types"],
    "lib": ["es2017", "es2020.bigint", "esnext.asynciterable", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
